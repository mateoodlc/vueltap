// Home

@import "~styles/vars";

.Home
    display block
    width 100%
    height auto
    position absolute

input
    background-color white
    color $black
    lost-column 1 / 2
    +mobile()
        color $white
        lost-column 1 / 1

.player-container
    max-width 600px
    aspect-ratio(16, 9)

.Home-banner_container
    position relative
    width 100vw
    height 130vh

.Home-banner_rotated
    position absolute
    width 120vw
    height 280vh
    background red
    transform rotate(-45deg)
    transform-origin -50% 22%
    border-radius 500px
    margin-left -5%


