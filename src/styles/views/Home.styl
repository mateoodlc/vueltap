// Home

@import "~styles/vars";

.Home
    display block
    width 100%
    height auto

input
    width 100%
    height 44px
    margin 10px 0
    background-color white
    color $grey
    padding 0 10px
    border-radius 2px
    border 1px solid $grey
    +mobile()
        color $white
        lost-column 1 / 1

.player-container
    max-width 600px
    aspect-ratio(16, 9)

.Header-phone_number
    display flex
    position relative
    justify-content center
    align-items center
    width 100vw
    height 44px
    background $subred
    z-index 2
    text-align center

.Home-banner_container
    position relative
    width 100%

.Home-banner_rotated
    position absolute
    width 120vw
    height 280vh
    background red
    transform rotate(-45deg)
    transform-origin -50% 22%
    border-radius 500px
    margin-left -5%
    +below(1280px)
        transform-origin -90% 0%

.Home-banner_content
    position relative
    top 15%
    left 50%
    transform translate(-50%, 0%)
    width 100%
    z-index 2

.Home-banner_content_description
    lost-center 80%

.Home-banner_content_delivery-card
    display flex
    flex-direction column
    justify-content space-around
    align-content center
    align-items center
    lost-center 100%
    height 440px
    margin 50px 0
    padding 0 72px
    background white
    border-radius 10px
    .delivery-card_second_row
        display flex
        width 100%
        justify-content space-around
        .delivery-card_second_row-column
            display flex
            flex 1
            flex-direction column
            &:first-child
                margin-right 10px
    .delivery-card_summary
        display flex
        justify-content space-between
        align-items center
        width 100%
        .delivery-card_summary-total
            display flex
            justify-content flex-start
            align-items center
            flex 3
            p
                margin-right 15px

.Home-banner_steps
    display flex
    position relative
    justify-content space-between
    width 100%
    margin-top 120px               
    .delivery-person_image
        width 50% 
        background-size contain
        background-repeat no-repeat
        background-position center
    .delivery-steps
        display flex
        flex-direction column
        justify-content space-between
        width 50%
        .delivery-steps_row
            display flex
            justify-content space-between
            margin 30px 0
            .delivery-steps_row-description
                display flex
                flex 0.8
                flex-direction column
                justify-content center





