// AppHeader

@import "~styles/vars";

.AppHeader
    display flex
    position relative
    justify-content space-between
    align-items center
    lost-center 80%
    height 70px
    background none
    z-index 2

h1
    margin 0

ul
    margin: 0
    padding: 0
    flex 2

li
    display: inline-block
    list-style-type: none
    margin: 0 5px
    &:first-of-type
        margin-left: 0

.main-logo 
    flex 1.5
    height 100%
    background-image url('../../assets/img/logo.png')
    background-size 130px
    background-position center left

span
    position absolute
    top 20%

.fade-enter-active, .fade-leave-active
    transition: opacity .5s

.fade-enter, .fade-leave-active
    opacity: 0

.menu-button
  display flex
  position inherit
  width 200px
  height 30px
  flex-direction column
  justify-content space-around
  align-items center
  z-index 3
  
.burger-line
    content ''
    position relative
    display block
    width 28px
    height 5px
    border-radius 5px
    background white
    transition all 0.5s ease
    &.rotateNeg
      transform rotate(-45deg)
      transform-origin 0
    &.rotatePos
      transform rotate(45deg)
      transform-origin 0
    &.removeMiddle
      transition all 0.1s ease
      opacity 0

