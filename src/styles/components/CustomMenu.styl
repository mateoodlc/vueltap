// Menu

@import "~styles/vars";

.Menu
    display flex
    position fixed
    width 80%
    height 100vh
    top 0
    z-index 2

.Menu--container
    display flex
    position fixed
    flex-direction column
    justify-content space-evenly
    align-items center
    align-content center
    width 80%
    height 100%
    .Menu--content
        display flex
        flex-direction column
        justify-content space-around
        align-items center
        height 50%
        z-index 3
        button 
            margin 0 auto
            margin-top 15px

.Menu--curtain    
    position absolute
    width 120vw
    height 100vh
    background $red
    left -20vw
    top 0
    transform-origin 0 0


