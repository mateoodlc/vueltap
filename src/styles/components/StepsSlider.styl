// Steps Slider

@import "~styles/vars";

.StepsSlider
    display block
    width 100%

.sliding_steps-slides
    display flex
    flex-wrap wrap
    justify-content space-around
    margin-top 60px
    padding-bottom 30px
    .slide-description
        display flex
        flex-direction column
        justify-content space-evenly
        width 30%
        padding 10% 0
        +below(800px)
            width 100%
        h3
            text-align left
            +below(800px)
                text-align center
                margin-bottom 15px
    .slide-image
        width 50%
        min-height 300px
        background-size contain
        +below(800px)
            width 100%
        +below(600px)
            min-height 204px
                


