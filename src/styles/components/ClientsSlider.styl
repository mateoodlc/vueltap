// Slider

@import "~styles/vars";

.ClientsSlider
    display block

.client_card
    display flex
    width 584px
    height 261px
    background white
    +below(800px)
        flex-direction column
        justify-content space-around
        align-items center
        width 286px
        min-height 383px
        padding-top 20px
    .client_card--image
        width 55%
        height 100%
        background-size cover
        background-repeat no-repeat
        background-position center
        +below(800px)
            width 80%
            height 40%
            background-position top center
    .client_card--content
        display flex
        flex-direction column
        justify-content space-evenly
        padding 30px
        text-align center
        .client_card--content--logo
            width 100%
            height 30px
            background-size contain
            background-repeat no-repeat
            background-position center
    