@import '~styles/vars'

html
    box-sizing border-box
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

*, *:before, *:after
    box-sizing border-box
    padding 0
    margin 0

html, body
    background-color $background
    color $white
    width 100%
    height 100%
    min-height 100%
    margin 0
    padding 0
    font-family $text-font

#app
    width 100%
    height 100%
    min-height 100%
    overflow-x hidden

h1
    text-align center
    font-family sans-serif
    font-size 54px
    +below(800px)
        font-size 38px

h2
    text-align center
    font-size 45px
    font-family sans-serif
    +below(800px)
        font-size 38px

h3
    text-align center
    font-size 30px
    font-family sans-serif

p
    font-size 18px
    font-family sans-serif
    +below(800px)
        font-size 16px

a
    color white
    font-size 14px

img
    margin 0

#main-loader
    display block
    size 100%
    position fixed
    background-color $primary
    text-align center
    color $white
    z-index 1001

input
    width 100%
    height 44px
    margin 10px 0
    background-color none
    color $grey
    padding 25px
    border-radius 5px
    border 1px solid $grey
    &:focus
        border 2px solid $grey
        outline-offset 0
        padding 2px solid
    +mobile()
        color $white
        lost-column 1 / 1

input:focus,
select:focus,
textarea:focus,
button:focus {
    outline: none;
}

//FONTS
.Font-light
    font-weight 100

.Font-regular
    font-weight 300

.Font-bold
    font-weight 550

//MODIFIERS
.Title
    text-align center

.Center
    text-align center

.Inline-text
    display inline-block

.Paragragh-grey
    color $grey

.Paragraph-red
    color $red

.Paragraph-yellow
    color $yellow

.Paragraph-small
    font-size 14px

.Light-text
    color $lightText

.Inline-content
    display flex
    align-items center

.Separator-line
    content ''
    display block
    width 100%
    height 1px
    margin 15px 0
    background $grey

//ICONS
.Icon-small
    display inline-block
    size 27px

